    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycler_view"
        android:layout_above="@+id/scrollView">

    </androidx.recyclerview.widget.RecyclerView>


    <HorizontalScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom"
        android:background="@android:color/white"
        android:scrollbarThumbHorizontal="@android:color/transparent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/textview_border"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                style="@style/Widget.AppCompat.Button"
                android:minWidth="0dp"
                android:minHeight="0dp">
                <ImageView
                    android:id="@+id/iv_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/report"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"/>

                <Button
                    android:id="@+id/report"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:background="#FFFFFF"
                    android:text="立即回報"
                    android:textColor="#858383"
                    android:textSize="14dp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/layout1"
                android:background="@drawable/textview_border"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                style="@style/Widget.AppCompat.Button"
                android:minWidth="0dp"
                android:minHeight="0dp">

                <ImageView
                    android:id="@+id/iv_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/question"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"/>
                <Button
                    android:id="@+id/question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="#858383"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:background="#FFFFFF"
                    android:text="常見問題"
                    android:textSize="14dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/layout2"
                android:background="@drawable/textview_border"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                style="@style/Widget.AppCompat.Button"
                android:minWidth="0dp"
                android:minHeight="0dp">

                <ImageView
                    android:id="@+id/iv_fountain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_fountain"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"/>
                <Button
                    android:id="@+id/hope"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="#858383"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:background="#FFFFFF"

                    android:text="許願池"
                    android:textSize="14dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/layout3">
                <Button
                    android:id="@+id/not_only_bus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:background="@drawable/textview_border"
                    android:textColor="#858383"

                    android:text="公車論壇"
                    android:textSize="14dp"
                    android:minHeight="30dp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_toRightOf="@+id/layout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/word_cloud"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:background="@drawable/textview_border"
                    android:textColor="#858383"

                    android:text="最近搞什麼"
                    android:textSize="14dp"
                    android:minHeight="30dp"/>
            </LinearLayout>





        </RelativeLayout>
    </HorizontalScrollView>



        <RelativeLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="5dp"
            android:layout_alignParentBottom="true">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/smile"
                android:layout_centerVertical="true"
                />

            <EditText
                android:id="@+id/ed_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/btn_input"
                android:layout_toRightOf="@+id/imageView"
                android:background="@drawable/edittext_border"
                android:hint="Type a message..."
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="5dp"
                />

            <ImageButton
                android:id="@+id/btn_input"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_action_name"
                android:text="Button"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />


        </RelativeLayout>






